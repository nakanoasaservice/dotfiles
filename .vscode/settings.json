{
  "nix.enableLanguageServer": true,
  "nix.hiddenLanguageServerErrors": ["textDocument/definition"],
  "nix.serverPath": "/etc/profiles/per-user/nakano/bin/nixd",
  "nix.serverSettings": {
    "nixd": {
      "nixpkgs": {
        "expr": "import (builtins.getFlake \"${workspaceFolder}\").inputs.nixpkgs { }"
      },
      "options": {
        "home-manager-darwin": {
          "expr": "(builtins.getFlake \"${workspaceFolder}\").darwinConfigurations.nakano-mbp.options.home-manager.users.type.getSubOptions []"
        },
        "nix-darwin": {
          "expr": "(builtins.getFlake \"${workspaceFolder}\").darwinConfigurations.nakano-mbp.options"
        },
        "nixos": {
          "expr": "(builtins.getFlake \"${workspaceFolder}\").nixosConfigurations.nakano-mbp.options"
        }
      }
    }
  }
}
